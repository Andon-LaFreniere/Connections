#import Wordnet and the Natural Language Toolkit
from nltk.corpus import wordnet
print("Enter words all lowercase with a single space in between (ex: fun tool love)")
inp = input("What are the words you want synonyms for? ")
inps = inp.split(' ')
#Create empty list add synonyms to
dict = {}

#loop through each word in our input, finding the synonyms and aadding them to a list. Add that list to a dictionary with the key
#being the word itself
for h in inps:
    synonyms = [] 
    for syn in wordnet.synsets(h):
        for i in syn.lemmas():
             synonyms.append(i.name())
             dict.update({h:synonyms})

print(dict)
